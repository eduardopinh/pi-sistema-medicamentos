<!-- Página de login -->
 
 <%- include('header', { title: 'Login' }) %>


<main class="container">
<section class="card">
<h2>Entrar</h2>


<% if (error) { %>
<div class="error"><%= error %></div>
<% } %>


<form action="/login" method="post" class="form">
<label>
Nome (opcional)
<input type="text" name="nome" value="<%= old.nome ? old.nome : '' %>" placeholder="Seu nome" />
</label>


<label>
Email
<input type="email" name="email" value="<%= old.email ? old.email : '' %>" placeholder="seu@exemplo.com" required />
</label>


<label>
Senha
<input type="password" name="senha" placeholder="Sua senha" required />
</label>


<button type="submit" class="btn">Entrar</button>
</form>


<p class="muted">Dica: este exemplo aceita qualquer senha não vazia (apenas para demo).</p>
</section>
</main>


</body>
</html>